---
import globalMap from '../../assets/global-map.png';
---

<section id="servers" class="py-24 relative overflow-hidden">
    <!-- Background Decor -->
    <div class="absolute top-0 right-0 w-[500px] h-[500px] bg-brand-primary/10 rounded-full blur-[100px] pointer-events-none mix-blend-screen"></div>

    <div class="container mx-auto px-6 relative z-10">
        <div class="flex flex-col md:flex-row items-center gap-12">
            <div class="md:w-1/2">
                <div class="inline-flex items-center px-4 py-1.5 rounded-full bg-brand-primary/10 border border-brand-primary/20 text-brand-primary text-sm font-medium mb-6">
                    <span class="flex h-2 w-2 rounded-full bg-brand-primary mr-2"></span>
                    Global Infrastructure
                </div>
                <h2 class="text-4xl md:text-5xl font-bold mb-6 text-text-main leading-tight">
                    Servers around the <br/>
                    <span class="text-transparent bg-clip-text bg-gradient-to-r from-brand-primary to-brand-accent">entire world</span>
                </h2>
                <p class="text-lg text-text-muted mb-8 leading-relaxed">
                    Our network covers 90+ countries with ultra-fast 10Gbps servers. Whether you're in Tokyo, New York, or London, we've got you covered with low-latency connections.
                </p>
                
                <div class="grid grid-cols-2 gap-6 mb-8">
                    <div class="p-4 rounded-2xl bg-bg-surface border border-border-main">
                        <div class="text-3xl font-bold text-text-main mb-1">3000+</div>
                        <div class="text-sm text-text-muted">High-Speed Servers</div>
                    </div>
                    <div class="p-4 rounded-2xl bg-bg-surface border border-border-main">
                        <div class="text-3xl font-bold text-text-main mb-1">90+</div>
                        <div class="text-sm text-text-muted">Countries Covered</div>
                    </div>
                </div>

                <a href="#pricing" class="inline-flex items-center text-brand-primary font-semibold hover:text-brand-secondary transition-colors group">
                    View full server list
                    <svg class="h-5 w-5 ml-2 transform group-hover:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                    </svg>
                </a>
            </div>
            
            <div class="md:w-1/2 relative">
                <div class="glass-panel p-2 rounded-3xl border-white/10 shadow-2xl relative z-10 bg-bg-surface/30 backdrop-blur-md">
                   <div class="rounded-2xl overflow-hidden relative">
                        <!-- Glow behind map -->
                        <div class="absolute inset-0 bg-brand-primary/10 mix-blend-overlay"></div>
                        <img src={globalMap.src} alt="Global Server Map" class="w-full h-auto opacity-90 hover:opacity-100 transition-opacity duration-500 transform hover:scale-105" />
                        
                        <!-- Map Pin Animations (Decorative) -->
                        <span class="absolute top-[30%] left-[20%] flex h-3 w-3">
                          <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-brand-primary opacity-75"></span>
                          <span class="relative inline-flex rounded-full h-3 w-3 bg-brand-primary"></span>
                        </span>
                        <span class="absolute top-[40%] right-[30%] flex h-3 w-3" style="animation-delay: 1s;">
                          <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-brand-accent opacity-75"></span>
                          <span class="relative inline-flex rounded-full h-3 w-3 bg-brand-accent"></span>
                        </span>
                         <span class="absolute bottom-[30%] right-[20%] flex h-3 w-3" style="animation-delay: 2s;">
                          <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-brand-primary opacity-75"></span>
                          <span class="relative inline-flex rounded-full h-3 w-3 bg-brand-primary"></span>
                        </span>
                   </div>
                </div>
                <!-- Decorative background blob -->
                <div class="absolute -inset-4 bg-gradient-to-tr from-brand-primary/20 to-brand-accent/20 rounded-[2.5rem] blur-xl -z-10 animate-pulse"></div>
            </div>
        </div>
    </div>
</section>
