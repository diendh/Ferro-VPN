---
import { Image } from 'astro:assets';
import logoText from '../assets/logo_text.svg';
---

<footer class="bg-brand-darker border-t border-white/5 py-12 text-sm text-gray-500">
    <div class="container mx-auto px-6">
        <div class="flex flex-col md:flex-row justify-between items-center">
            <div class="mb-4 md:mb-0">
                <a href="/" class="block mb-2">
                    <Image src={logoText} alt="Ferro VPN" class="h-10 w-auto" />
                </a>
                <p>&copy; {new Date().getFullYear()} Ferro VPN. All rights reserved.</p>
            </div>
            
            <div class="flex space-x-6">
                <a href="/privacy" class="hover:text-white transition-colors">Privacy Policy</a>
                <a href="/terms" class="hover:text-white transition-colors">Terms of Service</a>
                <a href="/support" class="hover:text-white transition-colors">Support</a>
                <a href="/contact" class="hover:text-white transition-colors">Contact</a>
            </div>
        </div>
    </div>
</footer>
