---
import { Image } from 'astro:assets';
import logoText from '../assets/logo_text.svg';
---

<footer class="bg-bg-page border-t border-border-main py-12 text-sm text-text-muted transition-colors duration-300">
    <div class="container mx-auto px-6">
        <div class="flex flex-col md:flex-row justify-between items-center">
            <div class="mb-4 md:mb-0">
                <a href="/" class="inline-block mb-4 bg-white rounded-xl px-3 py-1.5 shadow-lg">
                    <Image src={logoText} alt="Ferro VPN" class="h-8 w-auto" />
                </a>
                <p>&copy; {new Date().getFullYear()} Ferro VPN. All rights reserved.</p>
            </div>
            
            <div class="flex space-x-6">
                <a href="/privacy" class="hover:text-text-main transition-colors">Privacy Policy</a>
                <a href="/terms" class="hover:text-text-main transition-colors">Terms of Service</a>
                <a href="/support" class="hover:text-text-main transition-colors">Support</a>
                <a href="/contact" class="hover:text-text-main transition-colors">Contact</a>
            </div>
        </div>
    </div>
</footer>
