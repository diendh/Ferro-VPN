<section class="relative pt-32 pb-20 md:pt-48 md:pb-32 overflow-hidden">
    <!-- Background Elements -->
    <div class="absolute top-0 left-1/2 -translate-x-1/2 w-full h-full max-w-7xl pointer-events-none">
        <div class="absolute top-1/4 left-1/4 w-96 h-96 bg-brand-primary/20 rounded-full blur-3xl mix-blend-screen animate-pulse"></div>
        <div class="absolute bottom-1/4 right-1/4 w-96 h-96 bg-brand-secondary/20 rounded-full blur-3xl mix-blend-screen animate-pulse" style="animation-delay: 2s;"></div>
    </div>

    <div class="container mx-auto px-6 relative z-10 text-center">
        <div class="inline-flex items-center px-3 py-1 rounded-full bg-white/5 border border-white/10 text-brand-accent text-sm font-medium mb-8 backdrop-blur-sm">
            <span class="flex h-2 w-2 rounded-full bg-brand-accent mr-2 animate-ping"></span>
            <span>New: 50+ Server Locations Added</span>
        </div>

        <h1 class="text-5xl md:text-7xl font-bold mb-6 text-white leading-tight">
            Enjoy yourself <span class="text-transparent bg-clip-text bg-gradient-to-r from-brand-primary to-brand-accent">online</span>
        </h1>
        
        <p class="text-xl md:text-2xl font-semibold text-white mb-4">
            Safer/Speed/Trusted Anywhere You Go
        </p>

        <p class="text-lg text-gray-400 mb-10 max-w-2xl mx-auto leading-relaxed">
            It's a completely trusted app. We encrypt your network activity and hide your IP address. We never log, track, or share your network data.
        </p>

        <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
            <a href="#pricing" class="w-full sm:w-auto px-8 py-4 rounded-xl bg-brand-primary hover:bg-brand-secondary text-white font-semibold transition-all shadow-[0_0_40px_rgba(14,165,233,0.4)] hover:shadow-[0_0_60px_rgba(99,102,241,0.5)] transform hover:-translate-y-1">
                Get Started Now
            </a>
            <a href="#features" class="w-full sm:w-auto px-8 py-4 rounded-xl bg-white/5 hover:bg-white/10 border border-white/10 text-white font-semibold transition-all backdrop-blur-sm hover:border-brand-primary/50">
                View Plans
            </a>
        </div>
        
        <div class="mt-8 flex justify-center">
             <a href="#" class="inline-flex items-center gap-2 px-6 py-3 rounded-lg bg-[#0066CC]/10 hover:bg-[#0066CC]/20 text-[#0066CC] font-semibold transition-colors border border-[#0066CC]/20">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M3 17a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm3.293-7.707a1 1 0 011.414 0L9 10.586V3a1 1 0 112 0v7.586l1.293-1.293a1 1 0 111.414 1.414l-3 3a1 1 0 01-1.414 0l-3-3a1 1 0 010-1.414z" clip-rule="evenodd" />
                </svg>
                Download App
             </a>
        </div>

        <!-- Trust Indicators -->
        <div class="mt-16 pt-8 border-t border-white/5 flex flex-wrap justify-center gap-8 md:gap-16 opacity-50 grayscale hover:grayscale-0 transition-all duration-500">
             <!-- Placeholder SVG Logos for "Trusted by" -->
             <span class="text-lg font-bold">TechCrunch</span>
             <span class="text-lg font-bold">WIRED</span>
             <span class="text-lg font-bold">TheVerge</span>
             <span class="text-lg font-bold">Forbes</span>
        </div>
    </div>
</section>
