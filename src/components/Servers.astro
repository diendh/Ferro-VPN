<section id="servers" class="py-20 bg-brand-darker relative overflow-hidden">
    <!-- Glow effects -->
    <div class="absolute top-0 left-1/2 -translate-x-1/2 w-full h-full max-w-7xl pointer-events-none">
        <div class="absolute top-1/4 left-1/4 w-96 h-96 bg-brand-primary/10 rounded-full blur-3xl"></div>
        <div class="absolute bottom-1/4 right-1/4 w-96 h-96 bg-brand-accent/10 rounded-full blur-3xl"></div>
    </div>

    <div class="container mx-auto px-6 relative z-10">
        <div class="text-center mb-16 max-w-3xl mx-auto">
            <h2 class="text-3xl md:text-4xl font-bold text-white mb-6">Global High-Speed Network</h2>
            <p class="text-gray-400 text-lg">
                Connect to thousands of secure servers in 50+ locations worldwide. Our optimized mesh network ensures low latency and reliable connections wherever you are.
            </p>
        </div>

        <div class="relative rounded-3xl overflow-hidden shadow-2xl border border-white/10 group">
            <div class="absolute inset-0 bg-gradient-to-t from-brand-darker via-transparent to-transparent z-10"></div>
            
            <!-- Map Image -->
            <img 
                src="/global-map.png" 
                alt="Ferro VPN Global Server Network" 
                class="w-full h-auto object-cover transform group-hover:scale-105 transition-transform duration-700 ease-out opacity-90"
            >

            <!-- Floating Stats (Bottom) -->
            <div class="absolute bottom-0 left-0 w-full z-20 p-8 md:p-12">
                <div class="grid grid-cols-2 md:grid-cols-4 gap-6 text-center">
                    <div class="bg-black/40 backdrop-blur-md rounded-2xl p-4 border border-white/10">
                        <div class="text-3xl font-bold text-brand-primary mb-1">50+</div>
                        <div class="text-gray-400 text-sm">Locations</div>
                    </div>
                    <div class="bg-black/40 backdrop-blur-md rounded-2xl p-4 border border-white/10">
                        <div class="text-3xl font-bold text-brand-accent mb-1">3000+</div>
                        <div class="text-gray-400 text-sm">Servers</div>
                    </div>
                    <div class="bg-black/40 backdrop-blur-md rounded-2xl p-4 border border-white/10">
                        <div class="text-3xl font-bold text-white mb-1">10 Gbps</div>
                        <div class="text-gray-400 text-sm">Server Speed</div>
                    </div>
                    <div class="bg-black/40 backdrop-blur-md rounded-2xl p-4 border border-white/10">
                        <div class="text-3xl font-bold text-green-400 mb-1">99.9%</div>
                        <div class="text-gray-400 text-sm">Uptime</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
