                    </svg>
                    <span>USDT</span>
                </div>
            </div>
        </div>

        <!-- Payment Modal (Frontend Mockup for BE) -->
        <div x-show="showModal" 
             style="display: none;"
             class="fixed inset-0 z-50 flex items-center justify-center p-4 bg-black/80 backdrop-blur-sm"
             aria-modal="true" role="dialog">
             
            <div class="relative w-full max-w-md bg-brand-dark/95 border border-white/10 rounded-2xl shadow-2xl p-6"
                 @click.away="showModal = false">
                
                <!-- Close Button -->
                <button @click="showModal = false" class="absolute top-4 right-4 text-gray-400 hover:text-white">
                    <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                    </svg>
                </button>

                <div x-show="!step || step === 1">
                    <h3 class="text-xl font-bold text-white mb-2">Select Payment Method</h3>
                    <p class="text-gray-400 text-sm mb-6">Choose your preferred crypto currency required for <span x-text="selectedPlan" class="font-bold text-brand-primary"></span> Plan.</p>
                    
                    <div class="space-y-3">
                        <button @click="selectedCrypto = 'BTC'; step = 2" class="w-full flex items-center justify-between p-4 rounded-xl border border-white/10 hover:border-brand-primary/50 bg-white/5 hover:bg-white/10 transition-all group">
                            <div class="flex items-center gap-3">
                                <div class="text-[#F7931A]"> <!-- BTC Icon -->
