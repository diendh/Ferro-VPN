                <!-- USDT -->
                 <div class="flex items-center gap-2 text-white font-bold cursor-pointer" @click="selectedCrypto = 'USDT'; showModal = true">
                    <svg class="h-8 w-8 text-[#26A17B]" fill="currentColor" viewBox="0 0 24 24">
