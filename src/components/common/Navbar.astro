---
import { Image } from 'astro:assets';
import logoText from '../../assets/logo_text.svg';
import ThemeToggle from './ThemeToggle.astro';
---

<header class="fixed w-full top-0 z-50 transition-all duration-300">
    <div class="absolute inset-0 glass-panel border-b-0 rounded-b-[2rem] mx-2 mt-2 h-full -z-10"></div>
    <nav class="container mx-auto px-6 py-4" x-data="{ open: false }">
      <div class="flex items-center justify-between">
        <a href="/" class="flex items-center hover:opacity-80 transition-opacity">
            <Image src={logoText} alt="Ferro VPN" class="h-10 w-auto" />
        </a>
  
        <!-- Desktop Menu -->
        <div class="hidden md:flex items-center space-x-8">
          <a href="/#features" class="text-text-muted hover:text-brand-primary font-medium transition-colors">Features</a>
          <a href="/#pricing" class="text-text-muted hover:text-brand-primary font-medium transition-colors">Pricing</a>
          <a href="/#servers" class="text-text-muted hover:text-brand-primary font-medium transition-colors">Servers</a>
          <ThemeToggle />
          <a href="#" @click.prevent="$dispatch('open-download-modal')" class="px-6 py-2.5 rounded-full bg-brand-primary hover:bg-brand-secondary text-white transition-all font-semibold shadow-lg hover:shadow-brand-primary/25 hover:-translate-y-0.5">
            Get Started
          </a>
        </div>
  
        <!-- Mobile Menu Button -->
        <div class="md:hidden flex items-center space-x-4">
            <ThemeToggle />
            <button @click="open = !open" type="button" class="text-text-muted hover:text-text-main focus:outline-none p-2 rounded-full hover:bg-black/5 dark:hover:bg-white/10 transition-colors">
                <svg class="h-6 w-6" x-show="!open" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
                </svg>
                <svg class="h-6 w-6" x-show="open" x-cloak fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                </svg>
            </button>
        </div>
      </div>
  
      <!-- Mobile Menu -->
      <div 
        x-show="open" 
        x-transition:enter="transition ease-out duration-200"
        x-transition:enter-start="opacity-0 -translate-y-4"
        x-transition:enter-end="opacity-100 translate-y-0"
        x-transition:leave="transition ease-in duration-150"
        x-transition:leave-start="opacity-100 translate-y-0"
        x-transition:leave-end="opacity-0 -translate-y-4"
        class="md:hidden mt-4 pb-4 space-y-4 glass-panel rounded-2xl p-6 border border-border-main"
        style="display: none;"
      >
        <a href="/#features" class="block text-text-muted hover:text-brand-primary font-medium transition-colors">Features</a>
        <a href="/#pricing" class="block text-text-muted hover:text-brand-primary font-medium transition-colors">Pricing</a>
        <a href="/#servers" class="block text-text-muted hover:text-brand-primary font-medium transition-colors">Servers</a>
        <div class="flex flex-col space-y-3 pt-4 border-t border-border-main/50">
            <a href="#" @click.prevent="$dispatch('open-download-modal')" class="w-full text-center px-5 py-3 rounded-full bg-brand-primary hover:bg-brand-secondary text-white transition-all font-semibold shadow-lg">
                Get Started
            </a>
        </div>
      </div>
    </nav>
</header>
<div class="h-24"></div> <!-- Spacer for fixed header -->
