---
import { Image } from 'astro:assets';
import logoText from '../assets/logo_text.svg';
---

<header class="bg-brand-darker/90 backdrop-blur-md fixed w-full top-0 z-50 border-b border-white/5">
    <nav class="container mx-auto px-6 py-4" x-data="{ open: false }">
      <div class="flex items-center justify-between">
        <a href="/" class="flex items-center">
            <Image src={logoText} alt="Ferro VPN" class="h-12 w-auto" />
        </a>
  
        <!-- Desktop Menu -->
        <div class="hidden md:flex items-center space-x-8">
          <a href="/#features" class="text-gray-300 hover:text-brand-accent transition-colors">Features</a>
          <a href="/#pricing" class="text-gray-300 hover:text-brand-accent transition-colors">Pricing</a>
          <a href="/#servers" class="text-gray-300 hover:text-brand-accent transition-colors">Servers</a>
          <a href="#" @click.prevent="$dispatch('open-download-modal')" class="px-5 py-2.5 rounded-full bg-brand-primary hover:bg-brand-secondary text-white transition-all text-sm font-medium shadow-[0_0_20px_rgba(14,165,233,0.3)]">Get Started</a>
        </div>
  
        <!-- Mobile Menu Button -->
        <div class="md:hidden flex items-center">
            <button @click="open = !open" type="button" class="text-gray-300 hover:text-white focus:outline-none">
                <svg class="h-6 w-6" x-show="!open" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
                </svg>
                <svg class="h-6 w-6" x-show="open" x-cloak fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                </svg>
            </button>
        </div>
      </div>
  
      <!-- Mobile Menu -->
      <div 
        x-show="open" 
        x-transition:enter="transition ease-out duration-200"
        x-transition:enter-start="opacity-0 -translate-y-4"
        x-transition:enter-end="opacity-100 translate-y-0"
        x-transition:leave="transition ease-in duration-150"
        x-transition:leave-start="opacity-100 translate-y-0"
        x-transition:leave-end="opacity-0 -translate-y-4"
        class="md:hidden mt-4 pb-4 space-y-4"
        style="display: none;"
      >
        <a href="/#features" class="block text-gray-300 hover:text-brand-accent transition-colors">Features</a>
        <a href="/#pricing" class="block text-gray-300 hover:text-brand-accent transition-colors">Pricing</a>
        <a href="/#servers" class="block text-gray-300 hover:text-brand-accent transition-colors">Servers</a>
        <div class="flex flex-col space-y-3 pt-4 border-t border-white/10">
            <a href="#" @click.prevent="$dispatch('open-download-modal')" class="w-full text-center px-5 py-2.5 rounded-lg bg-brand-primary hover:bg-brand-secondary text-white transition-all text-sm font-medium">Get Started</a>
        </div>
      </div>
    </nav>
  </header>
