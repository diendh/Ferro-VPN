---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="404 - Page Not Found | Ferro VPN">
	<Navbar />
	<main class="min-h-screen flex items-center relative overflow-hidden bg-brand-darker">
        <!-- Background Elements -->
        <div class="absolute top-0 left-1/2 -translate-x-1/2 w-full h-full max-w-7xl pointer-events-none">
            <div class="absolute top-1/4 right-1/4 w-96 h-96 bg-brand-primary/10 rounded-full blur-3xl mix-blend-screen animate-pulse"></div>
            <div class="absolute bottom-1/4 left-1/4 w-96 h-96 bg-brand-secondary/10 rounded-full blur-3xl mix-blend-screen animate-pulse" style="animation-delay: 2s;"></div>
        </div>

        <div class="container mx-auto px-6 relative z-10 text-center pt-20">
            <h1 class="text-9xl font-black text-transparent bg-clip-text bg-gradient-to-r from-brand-primary/20 to-brand-accent/20 select-none absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 text-[15rem] leading-none pointer-events-none blur-sm opacity-50">
                404
            </h1>

            <div class="relative z-20 backdrop-blur-sm bg-brand-darker/30 p-8 rounded-3xl border border-white/5 inline-block">
                <div class="text-8xl font-bold mb-4 text-transparent bg-clip-text bg-gradient-to-r from-brand-primary to-brand-accent animate-bounce">
                    404
                </div>
                <h2 class="text-3xl md:text-5xl font-bold text-white mb-6">Page Not Found</h2>
                <p class="text-xl text-gray-400 mb-10 max-w-lg mx-auto">
                    Oops! The page you are looking for seems to have vanished into the digital void.
                </p>

                <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
                    <a href="/" class="w-full sm:w-auto px-8 py-4 rounded-xl bg-brand-primary hover:bg-brand-secondary text-white font-semibold transition-all shadow-lg hover:shadow-brand-primary/25 transform hover:-translate-y-1">
                        Go Back Home
                    </a>
                    <a href="/support" class="w-full sm:w-auto px-8 py-4 rounded-xl bg-white/5 hover:bg-white/10 border border-white/10 text-white font-semibold transition-all backdrop-blur-sm hover:border-brand-primary/50">
                        Contact Support
                    </a>
                </div>
            </div>
        </div>
    </main>
	<Footer />
</Layout>
